<UserControl x:Class="coursWPF.Controls.SpecialButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:coursWPF.Controls"
             mc:Ignorable="d" Height="37" Width="61">
    <UserControl.Resources>
        <Style x:Key="b1" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#cd2127" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Button x:Name="b" Content="Button" Style="{StaticResource b1}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
